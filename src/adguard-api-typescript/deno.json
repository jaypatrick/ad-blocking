{
  "$schema": "https://deno.land/x/deno/cli/schemas/config-file.v1.json",
  "name": "@adguard/api-typescript",
  "version": "1.0.0",
  "exports": {
    ".": "./src/index.ts",
    "./lib": "./src/lib/index.ts",
    "./cli": "./src/cli/index.ts"
  },
  "tasks": {
    "start": "deno run --allow-read --allow-write --allow-env --allow-net src/mod.ts",
    "sync": "deno run --allow-read --allow-write --allow-env --allow-net src/mod.ts sync",
    "cli": "deno run --allow-read --allow-write --allow-env --allow-net src/cli/index.ts",
    "test": "deno test --allow-read --allow-write --allow-env --allow-net tests/",
    "test:coverage": "deno test --allow-read --allow-write --allow-env --allow-net --coverage=coverage tests/",
    "check": "deno check src/mod.ts",
    "lint": "deno lint src/",
    "fmt": "deno fmt src/"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@^1.0.16",
    "@std/testing": "jsr:@std/testing@^1.0.16",
    "node:fs": "node:fs",
    "node:path": "node:path",
    "axios": "npm:axios@^1.13.2",
    "axios-retry": "npm:axios-retry@^4.5.0",
    "chalk": "npm:chalk@^5.6.2",
    "commander": "npm:commander@^14.0.2",
    "inquirer": "npm:inquirer@^13.1.0",
    "@inquirer/prompts": "npm:@inquirer/prompts@^8.1.0",
    "ora": "npm:ora@^9.0.0",
    "cli-table3": "npm:cli-table3@^0.6.5"
  },
  "compilerOptions": {
    "lib": ["deno.ns", "deno.unstable", "dom"],
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true
  },
  "nodeModulesDir": "auto",
  "fmt": {
    "indentWidth": 2,
    "lineWidth": 100,
    "singleQuote": true
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "exclude": ["require-await", "no-inner-declarations"]
    }
  }
}
