{
  "name": "adguard-filter-compiler",
  "version": "2.0.0",
  "description": "AdGuard filter list compiler for ad-blocking rules with multi-format configuration support",
  "main": "src/index.ts",
  "bin": {
    "filter-compiler": "src/cli.ts"
  },
  "scripts": {
    "build": "tsc",
    "compile": "npx ts-node src/cli.ts",
    "compile:yaml": "npx ts-node src/cli.ts -c compiler-config.yaml",
    "compile:toml": "npx ts-node src/cli.ts -c compiler-config.toml",
    "compile:copy": "npx ts-node src/cli.ts -r",
    "lint": "eslint .",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "legacy": "npx ts-node invoke-compiler.ts"
  },
  "author": "jaypatrick",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/jest": "^29.5.12",
    "@types/node": "^24.10.1",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "typescript-eslint": "^8.48.0"
  },
  "dependencies": {
    "@adguard/hostlist-compiler": "^1.0.39",
    "@iarna/toml": "^2.2.5",
    "yaml": "^2.7.1"
  }
}
