{
  "extends": "../../deno.base.json",
  "name": "@linear/import-tool",
  "version": "1.0.0",
  "exports": "./src/mod.ts",
  "tasks": {
    "import": "deno run --allow-read --allow-write --allow-env --allow-net src/mod.ts",
    "import:docs": "deno run --allow-read --allow-write --allow-env --allow-net src/mod.ts --file ../../docs/LINEAR_DOCUMENTATION.md",
    "import:dry-run": "deno run --allow-read --allow-write --allow-env --allow-net src/mod.ts --file ../../docs/LINEAR_DOCUMENTATION.md --dry-run",
    "cli": "deno run --allow-read --allow-write --allow-env --allow-net src/linear-import.ts",
    "test": "deno test --allow-read --allow-write --allow-env --allow-net src/",
    "check": "deno check src/mod.ts",
    "lint": "deno lint src/",
    "fmt": "deno fmt src/",
    "generate:types": "deno run --allow-read --allow-write --no-npm generate-types.ts"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@^1",
    "@std/testing": "jsr:@std/testing@^1",
    "node:fs": "node:fs",
    "node:path": "node:path",
    "node:url": "node:url",
    "@linear/sdk": "npm:@linear/sdk@^68.1.0",
    "dotenv": "npm:dotenv@^17.2.3",
    "marked": "npm:marked@^17.0.1",
    "commander": "npm:commander@^14.0.2"
  },
  "lint": {
    "rules": {
      "exclude": ["no-inner-declarations"]
    }
  }
}
