{
  "name": "rules-compiler-typescript",
  "version": "1.0.0",
  "description": "TypeScript frontend for AdGuard filter rules compiler",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "bin": {
    "rules-compiler": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/cli.js",
    "dev": "node --import tsx src/cli.ts",
    "compile": "node --import tsx src/cli.ts",
    "compile:yaml": "node --import tsx src/cli.ts -c compiler-config.yaml",
    "compile:toml": "node --import tsx src/cli.ts -c compiler-config.toml",
    "lint": "eslint src/",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "clean": "rm -rf dist",
    "bun:build": "bun build src/cli.ts --outdir dist --target node",
    "bun:start": "bun dist/cli.js",
    "bun:dev": "bun run src/cli.ts",
    "bun:compile": "bun run src/cli.ts",
    "bun:compile:yaml": "bun run src/cli.ts -c compiler-config.yaml",
    "bun:compile:toml": "bun run src/cli.ts -c compiler-config.toml",
    "bun:lint": "bun run lint",
    "bun:test": "bun test",
    "bun:test:coverage": "bun test --coverage"
  },
  "keywords": [
    "adguard",
    "filter",
    "compiler",
    "ad-blocking",
    "rules"
  ],
  "author": "jaypatrick",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.0",
    "eslint": "^9.28.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.0",
    "tsx": "^4.19.0",
    "typescript": "^5.8.0",
    "typescript-eslint": "^8.33.0"
  },
  "dependencies": {
    "@adguard/hostlist-compiler": "^1.0.39",
    "@iarna/toml": "^2.2.5",
    "yaml": "^2.8.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  }
}
