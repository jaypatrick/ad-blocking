{
  "name": "rules-compiler-typescript",
  "version": "1.0.0",
  "description": "TypeScript frontend for AdGuard filter rules compiler (Deno/Bun)",
  "type": "module",
  "scripts": {
    "bun:dev": "bun run src/cli.ts",
    "bun:compile": "bun run src/cli.ts",
    "bun:compile:yaml": "bun run src/cli.ts -c compiler-config.yaml",
    "bun:compile:toml": "bun run src/cli.ts -c compiler-config.toml",
    "bun:test": "bun test src/"
  },
  "keywords": [
    "adguard",
    "filter",
    "compiler",
    "ad-blocking",
    "rules",
    "deno",
    "bun"
  ],
  "author": "jaypatrick",
  "license": "MIT",
  "dependencies": {
    "@adguard/hostlist-compiler": "^1.0.39",
    "@iarna/toml": "^2.2.5",
    "yaml": "^2.8.0"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
